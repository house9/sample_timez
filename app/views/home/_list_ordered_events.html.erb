<div>
  <% list.each do |item| %>
    <div class="well">

      <% Time.use_zone(item.time_zone) do %>
        <p>
          <%= link_to item.event_name, item %><br />

          <em>Timezone set by block</em><br />
           - <%= l(item.start_at, format: :timez) %><br />
           - <%= l(item.end_at, format: :timez) %><br />

           <em>Force Timezones</em><br />
           - <%= l(item.start_at.in_time_zone(item.time_zone), format: :timez) %><br />
           - <%= l(item.end_at.in_time_zone(item.time_zone), format: :timez) %><br />
        </p>
      <% end %>

    </div>
  <% end %>
</div>