<div class="field">
  <%= f.label :event_name %><br>
  <%= f.text_field :event_name, class: "span6" %>
</div>
<div class="field">
  <%= f.label :start_at %><br>
  <%= f.datetime_select :start_at, { use_month_numbers: true, ampm: true, minute_step: 15 }, { class: "span2" } %>
</div>
<div class="field">
  <%= f.label :end_at %><br>
  <%= f.datetime_select :end_at, { use_month_numbers: true, ampm: true, minute_step: 15 }, { class: "span2" } %>
</div>
<div class="field">
  <%= f.label :description %><br>
  <%= f.text_area :description, class: "span12" %>
</div>
